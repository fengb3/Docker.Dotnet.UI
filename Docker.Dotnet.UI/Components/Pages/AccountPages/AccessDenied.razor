@page "/Account/AccessDenied"
@inject NavigationManager NavigationManager
@inject Microsoft.Extensions.Localization.IStringLocalizer Localizer

<PageTitle>@Localizer["ACCESS_DENIED_TITLE"]</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center justify-center" Style="min-height: 100vh;">
    <MudPaper Elevation="3" Class="pa-8" Style="width: 100%; max-width: 500px;">
        <MudStack Spacing="4" AlignItems="AlignItems.Center">
            <MudIcon Icon="@Icons.Material.Filled.Lock" Size="Size.Large" Color="Color.Error" Style="font-size: 4rem;" />
            <MudText Typo="Typo.h4" Align="Align.Center">@Localizer["ACCESS_DENIED"]</MudText>
            <MudText Typo="Typo.body1" Align="Align.Center" Color="Color.Secondary">
                @Localizer["ACCESS_DENIED_MESSAGE"]
            </MudText>
            <MudButton 
                Variant="Variant.Filled"
                Color="Color.Primary"
                OnClick="@(() => NavigationManager.NavigateTo("/Account/Login"))"
                Size="Size.Large">
                @Localizer["RETURN_TO_LOGIN"]
            </MudButton>
        </MudStack>
    </MudPaper>
</MudContainer>

