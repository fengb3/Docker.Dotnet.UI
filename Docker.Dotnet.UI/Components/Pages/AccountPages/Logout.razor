@page "/Account/Logout"
@using Docker.Dotnet.UI.ViewModels

@inherits MyComponentBase<LogoutViewModel>

<script>
    window.submitLogoutForm = function() {
        // 创建隐藏表单
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/api/Account/Logout';
        
        // 添加到页面并提交
        document.body.appendChild(form);
        form.submit();
    };
</script>
